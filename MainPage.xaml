<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLibrosMobile.MainPage">

    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
            <Label Text="CRUD MAUI API CONSUMER LIBROS" FontSize="40" HorizontalOptions="Center"/>
            <Label Text="Realizado Por: Franklin Enríquez" FontSize="20" HorizontalOptions="Center"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                <Button Text="Gestionar Generos" x:Name="cmdNextPageGenres" Clicked="cmdNextPageGenres_Clicked" FontSize="11" WidthRequest="150" HeightRequest="50" Margin="10,0"/>
                <Button Text="Gestionar Libros" x:Name="cmdNextPageBooks" Clicked="cmdNextPageBooks_Clicked" FontSize="11" WidthRequest="150" HeightRequest="50"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
